<com.thanksmister.iot.mqtt.alarmpanel.ui.views.NetworkSettingsView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/networkSettingsView"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/networkNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_network_name"
        android:inputType="text" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <EditText
        android:id="@+id/networkPassText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_network_password"
        android:inputType="textPassword" />

</com.thanksmister.iot.mqtt.alarmpanel.ui.views.NetworkSettingsView>